<div class="container d-flex justify-content-center ">
  <div class="jumbotron  bg-white rounded" style="width:900px; padding: 20px; opacity:0.7">
    <h1 class="display-4 d-flex justify-content-center"> Your Booking History</h1>
    <hr class="my-4">
    <ul>
    <% @orders.each do |order| %>
    <li><%= link_to "Order ##{order.id}", order_path(order) %> :: <%= order.party_item.name %> starting on: <%= order.start_date %> </li>

    <% end %>
    </ul>
  </div>
</div>
