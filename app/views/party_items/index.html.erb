<div class="container d-flex flex-wrap">

<div class="container">
  <div class="jumbotron">
      <div class="bg-body-secondary">
                <div data-controller="toggle" class="p-3 mt-5">
                  <button class="btn btn-outline-primary" data-action="click->toggle#flip">Add party item</button>


                      <div data-toggle-target="togglableElement" class="d-none">
                        <%= render "form", party_item: @party_item %>
                      </div>

                </div>
      </div>
    <hr class="my-4">
    <div class="d-flex flex-wrap justify-content-center row row-6">
      <% @party_items.each do |item| %>
      <div class="card m-3" style="width: 18rem; height: 25rem">
        <%# <img class="card-img-top" src="" alt="Card image cap"> %>
        <div class="card-body">
          <h5 class="card-title">Item name: <%= item.name %></h5>
          <p class="card-text">Item description: <%= item.description %></p>
          <p class="card-text">Price: <%= item.price %></p>
          <br/>
          <%= link_to "See Item", party_item_path(item), class:'btn btn-primary' %>
          <%# <%= link_to "Delete", restaurant_path(@restaurant),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>

        </div>
      </div>
    <% end %>
  </div>
</div>
