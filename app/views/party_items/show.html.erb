<div class="container">
  <div class="jumbotron">
    <h1 class="display-4"><%= @party_item.name %></h1>
    <p class="lead"><%= @party_item.description %></p>
    <hr class="my-4">
    <p>Price: <%= @party_item.price %></p>
    <p class="lead">

      <%= link_to "Edit Item", edit_party_item_path(@party_item) %>
      <%= link_to "Browse more items", party_items_path %>
      <%= link_to "Delete", party_item_path(@party_item), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </p>
  </div>
</div>
